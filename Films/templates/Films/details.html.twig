{% extends "base.html.twig" %}

{% block stylesheets %}
    <style>
        a{
            padding: 10px 20px;
            background: #673AB7;
            border: 1px solid #4600ff;
            display: flex;
            width: fit-content;
            text-decoration: none;
            border-radius: 3px;
            color: #FFF;
            font-size: 13px;
            font-weight: 700;
            margin: 0 auto;
            margin-top: 15px;
        }
        .details{
            margin-top: 15px;
            padding: 10px;
            background: #EEE;
            width: 500px;
            margin: 0 auto;
            text-align: center;
            font-size: 20px;
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="details">
    <h3>Nom: {{film.titre}}</h3>
    <h3>Realisateur: {{film.realisateur}}</h3>
    <h3>Date Sortie: {{film.getDateSortie()|date('Y-m-d')}}</h3>
    <h3>Genre: {{film.genre}}</h3>
</div>
<a href="{{path('app_films')}}">Go to home</a>
{% endblock %}