{% extends "base.html.twig" %}

{% block stylesheets %}
    <style>
        
        a{
            padding: 10px 20px;
            background: #673AB7;
            border: 1px solid #4600ff;
            display: flex;
            width: fit-content;
            text-decoration: none;
            border-radius: 3px;
            color: #FFF;
            font-size: 13px;
            font-weight: 700;
            margin: 0 auto;
            margin-top: 15px;
        }
        form{
            width: 300px;
            margin: 0 auto;
