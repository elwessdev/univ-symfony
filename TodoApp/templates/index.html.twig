{% extends "base.html.twig" %}

{% block title %} TodoApp {% endblock %}

{% block stylesheets %}
    <style>
                body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        input {
            outline: none;
        }

        .todo-container {
            width: 100%;
            max-width: 400px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .todo-header {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .todo-header input {
            flex-grow: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
        }

        .todo-header button {
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

        .todo-header button:hover {
            background-color: #218838;
        }

        .todo-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .todo-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-bottom: 10px;
            background: #f9f9f9;
        }

        .todo-item.completed {
            text-decoration: line-through;
            background: #e0e0e0;
        }

        .todo-actions {
            display: flex;
            gap: 5px;
            float: right;
        }

        .todo-actions button {
            padding: 5px 10px;
            font-size: 14px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .edit-btn {
            background-color: #ffc107;
            color: white;
        }

        .edit-btn:hover {
            background-color: #e0a800;
        }

        .task-content span{
            margin-left: 5px;
        }

        .delete-btn {
            background-color: #dc3545;
            color: white;
            text-decoration: none;
            padding: 7px 15px;
            border-radius: 4px;
        }

        .delete-btn:hover {
            background-color: #c82333;
        }

        .complete-checkbox {
            margin-right: 0;
        }

        /* Edit Mode Styles */
        .todo-item .view_part {
            width: 100%;
            overflow: hidden;
        }

        .todo-item .view_part .task-content{
            float: left;
            padding: 6px 0;
            display: flex;
        }
        .todo-item .view_part .todo-actions{
            display: flex;
            gap: 10px;
            float: right;
        }


        .todo-item.editing form.edit_part {
            display: block;
        }
        form{
            margin: 0;
        }

        .todo-item.editing .view_part {
            display: none;
        }

        .todo-item form.edit_part .task-content {
            display: flex;
            gap: 10px;
            align-items: center;
            float: left;
            width: calc(100% - 150px);
        }

        .todo-item form.edit_part input[type="text"] {
            flex-grow: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
            width: 211px;
        }

        .todo-item form.edit_part .todo-actions button {
            padding: 8px 15px;
            font-size: 14px;
        }

        .save-btn {
            background-color: #28a745;
            color: white;
        }

        .save-btn:hover {
            background-color: #218838;
        }

        .cancle-btn {
            background-color: #ffc107;
            color: white;
        }

        .cancle-btn:hover {
            background-color: #e0a800;
        }
        .edit_part{
            display: flex;
            width: 100%;
            grid-gap: 9px;
        }
        .hide{
            display: none !important;
        }
    </style>
{% endblock %}

{% block body %}
    {# <h1>Todo App</h1> #}
    <div class="todo-container">
        <form action="{{path('add_task')}}" method="POST" class="todo-header">
            <input type="text" id="taskInput" name="task" placeholder="Add a new task" required>
            <button type="submit">Add</button>
        </form>
        <ul class="todo-list" id="todoList">
            {% for task in tasks %}
                <li class="todo-item" id="task-{{task.id}}">
                    <div class="view_part">
                        <div class="task-content">
                            <form action="{{ path('done_task', {id: task.id}) }}" method="POST">
                                <input type="checkbox" class="complete-checkbox" name="completed" {% if task.isCompleted %} checked {% endif %} onchange="this.form.submit()">
                            </form>
                            <span>{{ task.content }}</span>
                        </div>
                        <div class="todo-actions">
                            <button class="edit-btn" onclick="openEdit({{task.id}})">Edit</button>
                            <a class="delete-btn" href="{{path('delete_task',{id:task.id})}}" >Delete</a>
                        </div>
                    </div>
                    <form class="edit_part hide" method="POST" action="{{path('edit_task',{id: task.id})}}">
                        <div class="task-content">
                            {# <input type="checkbox" class="complete-checkbox" {% if task.isCompleted %} checked {% endif %}> #}
                            <input type="hidden" name="id" value="{{task.id}}">
                            <input type="text" name="modifTask" value="{{task.content }}" />
                        </div>
                        <div class="todo-actions">
                            <button class="save-btn" type="submit">Save</button>
                            <button class="cancle-btn" onclick="closeEdit({{task.id}})" type="button">Cancel</button>
                        </div>
                    </form>
                </li>
            {% else %}
                <li style="text-align: center;">No tasks available</li>
            {% endfor %}
        </ul>
    </div>
    <script>
        function openEdit(taskId) {
            document.getElementById(`task-${taskId}`).children[0].classList.add("hide");
            document.getElementById(`task-${taskId}`).children[1].classList.remove("hide");
        }
        function closeEdit(taskId) {
            document.getElementById(`task-${taskId}`).children[0].classList.remove("hide");
            document.getElementById(`task-${taskId}`).children[1].classList.add("hide");
        }
    </script>
{% endblock %}